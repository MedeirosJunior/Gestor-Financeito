    if (entradas.length === 0) {
      alert('NÃ£o hÃ¡ entradas para exportar neste perÃ­odo.');
      return;
    }

    const excelData = [];
    excelData.push(['RELATÃ“RIO DE ENTRADAS - ' + formatMonthYear(selectedMonth)]);
    excelData.push(['']);
    excelData.push(['Data', 'DescriÃ§Ã£o', 'Categoria', 'Valor']);
    
    entradas.forEach(t => {
      excelData.push([
        new Date(t.date).toLocaleDateString('pt-BR'),
        t.description,
