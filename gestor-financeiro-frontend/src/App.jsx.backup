            onClick={() => {
              if (window.confirm('âš ï¸ ATENÃ‡ÃƒO: Isso vai limpar apenas os dados do navegador (nÃ£o os dados do servidor). Deseja continuar?')) {
                localStorage.clear();
                window.location.reload();
              }
            }}
